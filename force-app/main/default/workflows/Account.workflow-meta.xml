            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>When Sector is not equal to Healthcare and the Type = Customer the record type and pagelayout will switch to Commercial Customer.</description>
        <formula>AND(  IF(ISCHANGED(Automation_Control__c),  IF(CONTAINS(Automation_Control_Type__c, &quot;Workflow&quot;), FALSE,TRUE),TRUE),  ISCHANGED(SAP_Account_ID__c), NOT(ISBLANK(SAP_Account_ID__c)) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
