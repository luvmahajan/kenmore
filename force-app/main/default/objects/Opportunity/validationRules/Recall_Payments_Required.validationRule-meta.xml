<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Recall_Payments_Required</fullName>
    <active>false</active>
    <description>When Type = Renewal, Recall Payments is a required field</description>
    <errorConditionFormula>AND( 
ISPICKVAL(  StageName  , &quot;Renewal&quot;),  LEN(  Unpaid_Recalls_Time_Period__c  ) = 0)</errorConditionFormula>
    <errorDisplayField>Unpaid_Recalls_Time_Period__c</errorDisplayField>
    <errorMessage>Field required when Type = Renewal</errorMessage>
</ValidationRule>
