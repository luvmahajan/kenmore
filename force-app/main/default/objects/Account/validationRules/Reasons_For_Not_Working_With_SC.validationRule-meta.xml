<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reasons_For_Not_Working_With_SC</fullName>
    <active>false</active>
    <description>If Customer Status is Red, then Reasons For Not Working With SC is required</description>
    <errorConditionFormula>AND (IF(ISCHANGED(Automation_Control__c),
   IF( CONTAINS(Automation_Control_Type__c, &quot;Validation&quot;),FALSE,TRUE),TRUE),
ISPICKVAL(Customer_Status__c,&quot;Red&quot;),
ISPICKVAL(Reasons_For_Not_Working_With_SC__c , &quot;&quot;))</errorConditionFormula>
    <errorDisplayField>Reasons_For_Not_Working_With_SC__c</errorDisplayField>
    <errorMessage>Please select a reason for low/no activity from this customer in the last year</errorMessage>
</ValidationRule>
