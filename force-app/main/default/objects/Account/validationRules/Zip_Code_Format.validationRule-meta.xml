<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Zip_Code_Format</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(REGEX( BillingPostalCode  , &quot;\\d{5}?&quot;)),
NOT(ISBLANK(BillingPostalCode)), 
 $User.ProfileId &lt;&gt;&quot;00e30000001FeAR&quot;)</errorConditionFormula>
    <errorDisplayField>BillingPostalCode</errorDisplayField>
    <errorMessage>Please enter a valid 5 digit Zip Code. (Extended Zip Codes are not Valid)</errorMessage>
</ValidationRule>
