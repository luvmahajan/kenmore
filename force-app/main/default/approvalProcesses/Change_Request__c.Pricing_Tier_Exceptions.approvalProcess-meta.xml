<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>Account_Name__c</field>
        <field>Account_Owner__c</field>
        <field>Account_Status__c</field>
        <field>Business_Sector__c</field>
        <field>Pricing_Tier__c</field>
        <field>New_Pricing_Tier__c</field>
        <field>Pricing_Tier_QTD_Sales__c</field>
        <field>Pricing_Tier_YTD_Sales__c</field>
        <field>Reason_for_Update__c</field>
        <field>Approver_Status__c</field>
        <field>Approver_Comments__c</field>
        <field>Rejection_Comments__c</field>
        <field>Approver_Name__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andrew.willett@searshc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Change_Request__c.New_Pricing_Tier__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval by Andy Willett - First Approver</label>
        <name>Approval_by_Andy_Willett</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>robert.vanauken@searshc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Change_Request__c.New_Pricing_Tier__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Approval by Rob Van Auken - Second Approver</label>
        <name>Approval_by_Rob_Van_Auken</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>On click of Submit for Approval, Andy Willett will get the approval request.  On approval by Andy, the approval request is sent to Rob Van Auken.  On approval by Rob, the Approver Status will be changed to Approved.</description>
    <emailTemplate>unfiled$public/Pricing_Tier_Exception_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Change_Request__c.New_Pricing_Tier__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_Request_Approved_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Request_Completed_Email_Notification_1</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Request_Denied_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Request_Rejected_Email_Notification_1</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Field_Update_of_Request_Status_field</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Pricing Tier Exceptions</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
