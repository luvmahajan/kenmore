<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>melanie.leyendecker@searshc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>refugio.atilano@searshc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>BRD_Type__c</field>
        <field>Client_Type__c</field>
        <field>A_E_or_Sears__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Status_Salesforce_BIT</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jeffery.narish@searshc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>BIT approves routes to NCM to review on BRD call before sending to Directors</description>
        <entryCriteria>
            <formula>AND(
  ISBLANK( BIT__c ),
  NOT( 
    OR( 
      $User.Id = &quot;00530000007yEOj&quot;, 
      $UserRole.Id = &quot;00E300000012Qh2&quot;,
      AND( 
        $User.FirstName = &quot;Jeff&quot;, 
        $User.LastName = &quot;Narish&quot; 
          )
    ) 
  )
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>BIT Approval and NCM Support</label>
        <name>BIT_Approval_and_NCM_Support</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amanda.christopher@nationalclaimcenters.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>daryl.matthews@aefactoryservice.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jonathan.ezrol@searshc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>steven.notaro@aefactoryservice.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Sears Team</label>
        <name>Sears_Team</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Approval_Status_Salesforce_BIT</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Home_Services_BRD_Rejected_Internal</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This process is used for Home Services BRD records for internal approval prior to contract creation. Unanimous approval is required. Additional approval is required from non-Salesforce users through DocuSign (BRD: Home Services template).</description>
    <emailTemplate>BRD_BCD_Process_Templates/Home_Services_BRD_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Home_Services_BRD_Process__c.RecordType</field>
            <operation>equals</operation>
            <value>Home Services</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Date_Salesforce_to_NOW</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Status_Salesforce_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Status_Salesforce_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Home_Services_BRD_Rejected_Final</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Salesforce_BI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>BRD_Submission_Date_to_TODAY</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Home Services V.10</label>
    <recallActions>
        <action>
            <name>Approval_Status_Salesforce_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
