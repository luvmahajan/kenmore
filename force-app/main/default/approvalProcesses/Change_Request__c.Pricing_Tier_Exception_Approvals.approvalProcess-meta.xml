<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>AccountName__c</field>
        <field>Parent_Account_Name__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>petersen.robert@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval by Rob Petersen</label>
        <name>Approval_by_Rob_Petersen</name>
    </approvalStep>
    <description>On click of Submit for Approval, Rob Petersen will get the approval request. On approval by Rob, the Approver Status will be changed to Approved.</description>
    <emailTemplate>unfiled$public/Pricing_Tier_Exception_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Change_Request__c.New_Pricing_Tier__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_Request_Approved_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Request_Completed_Email_Notification_1</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Request_Denied_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Request_Rejected_Email_Notification_1</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Field_Update_of_Request_Status_field</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Pricing Tier Exception Approvals</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
