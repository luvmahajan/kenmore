<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Amount</field>
        <field>Contract_Agreement__c</field>
        <field>Signed_Rider__c</field>
        <field>Approval_Date__c</field>
        <field>Line_of_Credit_Assigned__c</field>
        <field>Sales_Order__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Contract_Approved_by_DM</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Signature Required by DM</label>
        <name>Signature_Required_by_DM</name>
        <rejectionActions>
            <action>
                <name>Contract_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Contract less than $75K on SC Contract Agreement, No Customer PO/Agreement</description>
    <emailTemplate>Contract_Email_Templates/Contract_Approval_Needed</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Amount</field>
            <operation>lessThan</operation>
            <value>75000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Contract_Agreement__c</field>
            <operation>equals</operation>
            <value>SC Contract</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Contract_has_Final_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_to_Financial_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Contract_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Notify_Contract_Admin_Team_of_Submitted_Contract</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Updated_Sales_Stage_to_Legal_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Contract &lt;$75k on SC Contract Agreement2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
