<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>babercr@searshc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>melanie.leyendecker@searshc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Client_Legal_Name__c</field>
        <field>Account</field>
        <field>Opportunity__c</field>
        <field>Name</field>
        <field>StartDate</field>
        <field>EndDate</field>
        <field>ContractTerm</field>
        <field>ContractNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Assigned_Date_SFDC_to_NOW</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Approval_Status_Salesforce_Internal</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>melanie.leyendecker@searshc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>NOT(
  OR( 
    $User.Id = &quot;0053000000A0JHd &quot;, 
    AND( 
      $User.FirstName = &quot;Melanie&quot;, 
      $User.LastName = &quot;Leyendecker&quot; 
    ) 
  )
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>National Contract Manager</label>
        <name>National_Contract_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amanda.christopher@nationalclaimcenters.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>daryl.matthews@aefactoryservice.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>steven.notaro@aefactoryservice.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Sears Team</label>
        <name>Sears_Team</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Approval_Status_Salesforce_NCM</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This process is used for Home Services Contract records for internal approval prior to contract creation. Unanimous approval is required. Additional approval is required from non-Salesforce users through DocuSign (Internal Approval - Contract: Home Services template).</description>
    <emailTemplate>Contract_Email_Templates/Home_Services_Contract_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contract.RecordType</field>
            <operation>equals</operation>
            <value>Home Services</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.BIT__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Date_Salesforce_to_NOW</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Status_Salesforce_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Status_Salesforce_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Home_Services_Contract_Rejected_Final</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Salesforce_NCM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Contract_Submission_Date_to_NOW</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Home Services V.2</label>
    <recallActions>
        <action>
            <name>Approval_Status_Salesforce_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
