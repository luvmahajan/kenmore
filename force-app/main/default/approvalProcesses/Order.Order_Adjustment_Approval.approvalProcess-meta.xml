<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>don.conner@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>eric.hansen@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marquitta.carr@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>michelle.wiggins@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>shalotta.griner@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sheila.styles@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.Type</field>
                <operation>equals</operation>
                <value>Credit Memo,Debit Memo</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Sales Rep Manager Approval</label>
        <name>Sales_Rep_Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>don.conner@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>eric.hansen@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marie.bailey@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marquitta.carr@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>monica.green@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tanaeka.vaughner@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>veronica.mealing@kenmoredirect.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.Type</field>
                <operation>equals</operation>
                <value>Return,Exchange</value>
            </criteriaItems>
        </entryCriteria>
        <label>Post Sales Manager/ Lead Approval</label>
        <name>Post_Sales_Manager_Lead_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approve_Adjustment_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Submit_Approval_Adjustment_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Order Adjustment Approval</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
